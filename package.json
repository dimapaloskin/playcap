{
  "name": "playcap",
  "version": "0.0.1",
  "description": "Native access to speaker and microphone for Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "configure": "node-gyp configure",
    "clean": "node-gyp clean",
    "build": "node-gyp build",
    "rebuild": "node-gyp rebuild",
    "dev": "node-gyp --debug configure build",
    "js:build": "tsc --build tsconfig.json",
    "build:all": "npm run configure && npm run rebuild && npm run js:build"
  },
  "author": "Dmitry Pavlovsky",
  "keywords": [
    "audio",
    "miniaudio",
    "sound",
    "speaker",
    "microphone",
    "mic",
    "input",
    "output",
    "headphone",
    "coreaudio",
    "pulseaudio",
    "alsa"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.12",
    "node-gyp": "^7.1.2",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "bindings": "^1.5.0"
  }
}
